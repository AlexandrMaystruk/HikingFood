<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="StepProgressView">
        <!-- Common customization -->
        <attr name="stepsCount" format="integer" />
        <attr name="colorInactive" format="color" />
        <!-- Node customization -->
        <attr name="nodeHeight" format="dimension" />
        <attr name="nodeColor" format="color" />
        <!-- Arc customization -->
        <attr name="arcWidth" format="dimension" />
        <attr name="arcPadding" format="dimension" />
        <attr name="arcColor" format="color" />
        <!-- Text customization -->
        <attr name="textNodeSize" format="dimension" />
        <attr name="textNodeColor" format="color" />
        <!-- Text customization -->
    </declare-styleable>

    <declare-styleable name="CustomCircleProgress">
        <attr name="sunriseIcon" format="integer"/>
        <attr name="sunsetIcon" format="integer"/>
        <attr name="min" format="integer"/>
        <attr name="max" format="integer"/>
        <attr name="colorProgress" format="integer"/>
        <attr name="stokeWidth" format="dimension"/>
        <attr name="sunClockProgress" format="integer"/>
        <attr name="startAngle" format="integer"/>
    </declare-styleable>


</resources>