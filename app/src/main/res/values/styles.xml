<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/colorPrimary</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

    <style name="CollapsingToolbarLayoutExpandedTextStyle" parent="AppTheme">
        <item name="android:textColor">@android:color/transparent</item>
        <item name="android:textSize">0sp</item>
    </style>

    <!-- Theme for toolbar -->
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <!-- Theme for toolbar popup menu -->
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowActionBarOverlay">true</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@drawable/bg_splash_screen</item>
    </style>

    <style name="CustomActionBar" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:windowActionBarOverlay">true</item>
        <item name="windowActionBarOverlay">true</item>
    </style>

    <style name="TextEditSearchWithKeyboard">
        <item name="android:layout_margin">@dimen/margin_s</item>
        <item name="android:background">@color/colorWhite</item>
        <item name="android:drawableEnd">@drawable/ic_search</item>
        <item name="android:padding">@dimen/margin_m</item>
        <item name="android:hint">@string/search</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/text_m</item>
    </style>

    <style name="FabSuccess">
        <item name="android:backgroundTint">@color/colorGreen</item>
        <item name="android:src">@drawable/ic_check</item>
    </style>

    <style name="FabNextStep">
        <item name="android:backgroundTint">@color/colorGreen</item>
        <item name="android:src">@drawable/ic_chevron_right</item>
    </style>

    <style name="GuidelineHorizontalComponent">
        <item name="android:orientation">horizontal</item>
        <item name="layout_constraintGuide_percent">@dimen/mainVerticalGuideline</item>
    </style>

    <style name="GuidelineVerticalComponent">
        <item name="android:orientation">vertical</item>
        <item name="layout_constraintGuide_percent">@dimen/mainVerticalGuideline</item>
    </style>


    <style name="CircleNumberImage">
        <item name="android:layout_width">@dimen/size_xl</item>
        <item name="android:layout_height">@dimen/size_xl</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">@dimen/text_xs</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/bg_circle_avatar</item>
    </style>

    <style name="ComponentBarLayout">
        <item name="android:background">@drawable/bg_corner_layout</item>
        <item name="android:paddingTop">@dimen/margin_min</item>
        <item name="android:paddingBottom">@dimen/margin_min</item>
        <item name="android:paddingStart">@dimen/margin_min</item>
        <item name="android:paddingEnd">@dimen/margin_min</item>
    </style>

    <style name="TextOrderItemTitle">
        <item name="android:textColor">@color/colorText</item>
        <item name="android:textSize">@dimen/margin_s</item>
    </style>


    <style name="TextOrderItem" parent="@android:style/Widget.TextView">
        <item name="android:textSize">@dimen/text_m</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:paddingTop">@dimen/margin_xs</item>
        <item name="android:paddingBottom">@dimen/margin_xs</item>
        <item name="android:paddingStart">@dimen/margin_m</item>
        <item name="android:paddingEnd">@dimen/margin_s</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TextBottomNavigation">
        <item name="android:textSize">@dimen/text_xs</item>
        <item name="android:textColor">@color/textWhiteUnselected</item>
    </style>

    <style name="TextXS">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_xs</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="TextS">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_s</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="TextM">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_m</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="TextL">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_l</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <!--Refactored style-->

    <style name="MainButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/button_height</item>
        <item name="android:layout_marginStart">@dimen/size_xxl</item>
        <item name="android:layout_marginEnd">@dimen/size_xxl</item>
        <item name="android:layout_marginBottom">@dimen/margin_m</item>
        <item name="android:background">@drawable/bg_main_btn</item>
        <item name="android:textSize">@dimen/text_s</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>


    <style name="MainButtonInactive" parent="MainButton">
        <item name="android:background">@drawable/bg_main_inactive_btn</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="HorizontalNumberPicker">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">38dp</item>
        <item name="android:layout_marginStart">@dimen/margin_min</item>
        <item name="android:layout_marginTop">@dimen/margin_min</item>
        <item name="android:layout_marginEnd">@dimen/margin_min</item>
        <item name="android:layout_marginBottom">@dimen/margin_min</item>
        <item name="np_dividerColor">@color/colorDivider</item>
        <item name="np_dividerDistance">38dp</item>
        <item name="np_dividerThickness">1dp</item>
        <item name="np_orientation">horizontal</item>
        <item name="np_selectedTextColor">@color/colorWhite</item>
        <item name="np_selectedTextSize">@dimen/text_m</item>
        <item name="np_textColor">@color/colorTextInactive</item>
        <item name="np_textSize">@dimen/text_s</item>
    </style>

</resources>
