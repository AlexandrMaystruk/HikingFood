<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view_ingredient_portion"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/margin_min"
    android:layout_marginTop="@dimen/margin_min"
    android:layout_marginEnd="@dimen/margin_min"
    app:cardCornerRadius="@dimen/mainCardCornerRadius"
    app:cardElevation="3dp"
    app:cardPreventCornerOverlap="false"
    app:contentPadding="0dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tvProductName"
            style="@style/TextM"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_min"
            android:layout_marginEnd="@dimen/margin_min"
            android:gravity="center_vertical"
            android:textColor="@color/colorOrange"
            android:textSize="@dimen/text_l"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/npRelaxDayCountValue"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvUnit"
            style="@style/TextM"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/margin_min"
            android:text="Гр."
            android:textColor="@color/colorOrange"
            android:textSize="@dimen/text_l"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.shawnlin.numberpicker.NumberPicker
            android:id="@+id/npRelaxDayCountValue"
            android:layout_width="110dp"
            android:layout_height="35dp"
            android:layout_marginStart="@dimen/margin_min"
            android:layout_marginEnd="@dimen/margin_min"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/tvUnit"
            app:layout_constraintTop_toTopOf="parent"
            app:np_dividerColor="@color/colorOrange40"
            app:np_orientation="horizontal"
            app:np_selectedTextColor="@color/colorOrange"
            app:np_selectedTextSize="@dimen/text_m"
            app:np_textColor="@color/colorOrangeInactive"
            app:np_textSize="@dimen/text_s" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
